<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/subitem_layout_margin_bottom"
    android:orientation="horizontal"
    >

  <TextView
      android:id="@+id/subsectionLeft"
      android:layout_width="@dimen/left_subsection_width"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:fontFamily="monospace"
      android:includeFontPadding="false"
      android:padding="@dimen/left_subsection_padding"
      android:textColor="@color/black"
      />

  <TextView
      android:id="@+id/subsectionRight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:fontFamily="monospace"
      />

</LinearLayout>
