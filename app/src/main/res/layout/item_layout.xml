<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/item_cardview_layout"
      android:layout_width="@dimen/cardview_width"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_margin="@dimen/item_cardview_margin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.CardContent"
        >

      <TextView
          android:id="@+id/header_item"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/header_item_margin_bottom"
          android:fontFamily="serif-monospace"
          android:gravity="center"
          android:textColor="@color/black"
          android:textSize="@dimen/header_item_textsize"
          android:textStyle="bold"
          tools:text="info"
          />

      <LinearLayout
          android:id="@+id/subitem_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>